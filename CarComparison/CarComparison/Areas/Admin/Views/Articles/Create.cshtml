<h2>Tạo bài viết</h2>

<div class="text-lg-right">
    @Html.ActionLink("Quay lại", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="content-edit">
            <div class="form-car-create">
                <div class="form-group">
                    <label>Mã Số Bài Viết</label>
                    @Html.EditorFor(model => model.id_article, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.id_article, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Loại Bài Viết</label>
                    @Html.DropDownList("id_category", ViewData["id_category"] as SelectList, htmlAttributes: new { @class = "form-control", @onchange = "funCheck()" })
                    @Html.ValidationMessageFor(model => model.id_category, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Tiêu đề</label>
                    @Html.EditorFor(model => model.title_article, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.title_article, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Bí danh</label>
                    @Html.EditorFor(model => model.alias_article, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.alias_article, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Tác giả</label>
                    @Html.Display(user.lname_user) @Html.Display(user.fname_user)
                </div>
                <div class="form-group">
                    <label>Nội dung</label>
                    @Html.TextAreaFor(model => model.description_article, new { @id = "ckeDescription" })
                </div>
                <div class="form-group">
                    <label id="label_link_video">Đường dẫn video</label>
                    @Html.EditorFor(model => model.linkvideo_article, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.linkvideo_article, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>>

        <script type="text/javascript">
            function funCheck() {
                if ($('#id_category').val() == "CaAr01") {
                    $('#linkvideo_article').show();
                    $('#label_link_video').show();
                }
                else {
                    $('#linkvideo_article').hide();
                    $('#label_link_video').hide();
                }
            }
        </script>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" name="action" value="Đăng bài" class="btn btn-default" />
                @*<input type="submit" name="action" value="Lưu bài" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

