<h1 class="h3 mb-2 text-gray-800">Chi tiết tài khoản</h1>

<div>
    <hr />
    <div class="content-edit">
        <div class="form-car">
            <div class="form-group">
                <dt>
                    Ảnh
                </dt>

                <dd>
                    <img class="img-thumbnail" style="object-fit:cover" src="@Html.DisplayFor(model => model.avt_user)" alt="" />
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Tài khoản
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.name_user)
                </dd>

            </div>
        </div>
        <div class="form-car" style="margin-left:30px;">
            <div class="form-group">
                <dt>
                    Tên
                </dt>
                <dd>
                    @Html.DisplayFor(model => model.lname_user) @Html.DisplayFor(model => model.fname_user)
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Giới tính
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.sex_user)
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Số điện thoại
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.phone_user)
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Loại tài khoản
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.TypeUser.name_typeuser)
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Địa chỉ
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.address_user)
                </dd>
            </div>
            <div class="form-group">
                <dt>
                    Email
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.email_user)
                </dd>
            </div>
        </div>
    </div>
    <form action="/User/Block" method="post">
        <div class="content-edit">
            @if (Model.block_state_user == "1" && Model.id_user != "Us01")
            {
                <input type="submit" class="btn btn-primary" name="action" value="Khóa" />
            }
            else if(Model.block_state_user == "0" && Model.id_user != "Us01")
            {
                <input type="submit" class="btn btn-primary" name="action" value="Mở khóa" />
            }
            </a>
            <input style="display:none;" name="id" value=@Model.id_user />
            <a href="/Admin/User" style="margin-left:5px;">
                <input type="button" class="btn btn-secondary" value="Quay lại" />
            </a>
        </div>
    </form>

</div>