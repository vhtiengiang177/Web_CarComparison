<h1 class="h3 mb-2 text
    -gray-800">Thêm tài khoản</h1>

<div class="text-lg-right">
    @Html.ActionLink("Quay lại", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <div class="content-edit">
            <div class="form-car-create">
                <div class="form-group">
                    <label>Mã Số User</label>
                    @Html.EditorFor(model => model.id_user, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.id_user, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Tài khoản</label>
                    @Html.EditorFor(model => model.name_user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("usname", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Mật khẩu</label>
                    <input class="form-control" type="password" name="password_user" id="password_user" />
                    @Html.ValidationMessage("pass", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Loại tài khoản</label>
                    @Html.DropDownList("id_typeuser", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessage("typeus", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Giới tính</label><br />
                    <span style="margin-left:10px;" class="input-group-span-radio">Nam&nbsp;&nbsp;<input class="form-group" type="radio" name="sex" value="1" checked />&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Nữ&nbsp;&nbsp;<input type="radio" name="sex" value="2" />&nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;Khác&nbsp;&nbsp;<input type="radio" name="sex" value="3" /></span>
                </div>
            </div>
            <div class="form-car-create">
                <div class="form-group">
                    <label>Họ</label>
                    @Html.EditorFor(model => model.lname_user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("lname", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Tên</label>
                    @Html.EditorFor(model => model.fname_user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessage("fname", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Email</label>
                    @Html.EditorFor(model => model.email_user, new { htmlAttributes = new { @class = "form-control", @type = "email" } })
                    @Html.ValidationMessageFor(model => model.email_user, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Điện thoại</label>
                    @Html.EditorFor(model => model.phone_user, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.phone_user, "", new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label>Ngày sinh</label><br />
                    <input class="form-control" type="date" name="birthday" value="" max="2018-12-31" />
                    @Html.ValidationMessage("bday", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @Html.ValidationMessage("RegisterError", new { @class = "text-danger" })
        <div class="content-edit">
            <div class="form-group">
                <input type="submit" value="Thêm mới" class="btn btn-primary" /> |
                @Html.ActionLink("Quay lại", "Index")
            </div>
        </div>
    </div>
}

