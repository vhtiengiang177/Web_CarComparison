    <h1 class="h3 mb-2 text-gray-800">Danh sách tài khoản</h1>

<div class="card shadow mb-4">
    <div class="card-header py-0">

        <div class="card-body text-right">
            <a href="@Url.Action("Create", "User")" class="btn btn-primary btn-icon-split btn-sm">
                <span class="text">Thêm tài khoản</span>
            </a>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>STT</th>
                        <th>Tên tài khoản</th>
                        <th>Ngày đăng ký</th>
                        <th>Ngày đăng nhập gần đây</th>
                        <th>Hành động</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>STT</th>
                        <th>Tên tài khoản</th>
                        <th>Ngày đăng ký</th>
                        <th>Ngày đăng nhập gần đây</th>
                        <th>Hành động</th>
                    </tr>
                </tfoot>
                <tbody>
                    @{
                        int i = 0;
                    }
                    @foreach (var item in Model)
                    {
                    <tr>
                        <form action="/User/Block" method="post">
                            <td>
                                @{
                                    i++;
                                }
                                <div>@i</div>
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.name_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.registerdate_user)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.lastvisitdate_user)
                            </td>
                            <td>
                                @if (item.block_state_user == "1")
                                {
                                    <input type="submit" class="text-danger" name="action" value="Khóa" />
                                }
                                else
                                {
                                    <input type="submit" class="" name="action" value="Mở khóa" />
                                }
                                <input style="display:none;" name="id" value=@Html.DisplayFor(modelItem => item.id_user) />
                                | @Html.ActionLink("Chi tiết", "Details", new { id = item.id_user })
                            </td>
                        </form>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

</div>


   
    @section scriptTable{
        <script src="~/Asset/Admin/vendor/datatables/jquery.dataTables.js"></script>
        <script src="~/Asset/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>
        <script>
            $(document).ready(function () {
                $('#dataTable').DataTable({
                    "language": {
                        "bLengthChange": true,
                        "sLengthMenu": "Hiển thị _MENU_ mục",
                        "zeroRecords": "Lỗi: Không tìm thấy dữ liệu",
                        "sInfo": "Hiển thị từ _START_ đến  _END_ trong _TOTAL_ mục",
                        "infoEmpty": "Dữ liệu không có sẵn",
                        "oPaginate": {
                            "sFirst": "Đầu",
                            "sLast": "Cuối",
                            "sNext": "Tiếp",
                            "sPrevious": "Trước"
                        },
                        "sSearch": "Tìm kiếm",
                        "sInfoFiltered": "(được lọc từ tổng _MAX_ mục được nhập)"
                    }

                });
            });
        </script>
    }
