<h1 class="h3 mb-2 text-gray-800">Xóa xe</h1>
<div>
    @Html.DisplayFor(model => model.Version.Model.Automaker.name_automaker)  @Html.DisplayFor(model => model.Version.Model.name_model) @Html.DisplayFor(model => model.Version.name_version)
</div>
<div>
    <hr />
    <div class="content-edit">
        <dl class="form-car">
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Ảnh
                    </dt>

                    <dd>
                        <img class="img-thumbnail" src="@Url.Content(@Model.img_car)" alt="" />
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Tổng quan
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.overview_car)
                    </dd>
                </div>

            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Chiều Dài Cơ Sở
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.length_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Mâm Xe
                    </dt>
                    <dd>
                        @Html.DisplayFor(model => model.wheels_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Thông Số Lốp
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.tireparameters_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Trọng Lượng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.weight_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Dung Tích Động Cơ
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.capacity_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Mã Lực
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.horsepower_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Hộp Số
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.gear_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Momen Xoắn
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.torque_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Hệ Dẫn Động
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.drivetype_car)

                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Hệ Thống Thắng Trước
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.frontbrakesystem_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Hệ Thống Thắng Sau
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.rearbrakesystem_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Tốc Độ Tối Đa
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.maximumspeed_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Tăng tốc từ 0-100km/h
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.accelerationtime_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Dung Tích Bình Xăng
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.capacitytank_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Số Ghế
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.numberseat_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
