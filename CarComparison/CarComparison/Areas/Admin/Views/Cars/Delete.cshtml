                    <dt>
                        Cửa Sổ Trời
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.sunroof_car)
                    </dd>
                </div>
            </div>
            <div class="form-group">
                <div class="detail-car">
                    <dt>
                        Giá Xe
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.charge_car)
                    </dd>
                </div>
            </div>
        </dl>
    </div>
    <div class="content-edit">
        <a href="#" data-toggle="modal" data-target="#confirmDelete">
            <input type="button" class="btn btn-primary" value="Xóa" />
        </a>

        <a href="/Admin/Cars" style="margin-left:5px;">
            <input type="button" class="btn btn-secondary" value="Quay lại" />
        </a>
    </div>

    <!-- Logout Modal-->
    <div class="modal fade" id="confirmDelete" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Thông báo</h5>
                    <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">Chọn "Xóa" bên dưới nếu bạn đã chắc chắn xóa xe này.</div>
                <div class="modal-footer">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-actions no-color">
                            <input type="submit" value="Xóa" class="btn btn-primary" id="confirmDelete" />
                            <input class="btn btn-secondary" type="button" data-dismiss="modal" aria-label="Close"
                                   value="Hủy" />
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
