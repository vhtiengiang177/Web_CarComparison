<h1 class="h3 mb-2 text-gray-800">Danh sách xe</h1>

<div class="card shadow mb-4">
    <div class="card-header py-0">

        <div class="card-body text-right">
            <a href="@Url.Action("Create", "Cars")" class="btn btn-primary btn-icon-split btn-sm">
                <span class="text">Thêm Xe</span>
            </a>
        </div>

    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>

                        <th>Hãng xe</th>
                        <th>Dòng xe</th>
                        <th>Phiên bản</th>
                        <th></th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>

                        <td>
                            @Html.DisplayFor(modelItem => item.name_automaker)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name_model)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.name_version)
                        </td>
                        <td>
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.id_car }) |
                            @Html.ActionLink("Sửa", "Edit", new { id = item.id_car }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.id_car })
                        </td>
                    </tr>
                }
            </table>
        </div>
