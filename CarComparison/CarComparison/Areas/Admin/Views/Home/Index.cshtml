
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
@model CarComparison.Areas.Admin.Models.User_

<script>
window.onload = function () {

    var chart = new CanvasJS.Chart("chartContainer", {
	    theme: "light1", // "light1", "light2", "dark1", "dark2"
	    exportEnabled: true,
	    animationEnabled: true,
        title: {
            fontFamily: "tahoma",
		    text: "Biểu đồ % lượng xe của các hãng"
	    },
        subtitles: [{
            fontFamily: "tahoma",
		    text: "Tháng 1/2021"
	    }],
	    data: [{
		    type: "pie",
		    startAngle: 180,
		    toolTipContent: "<b>{label}</b>: {y}%",
		    showInLegend: "true",
		    legendText: "{label}",
		    indexLabel: "{label} - {y}%",
		    dataPoints: @Html.Raw(ViewBag.DataPoints)
	    }]
    });
    chart.render();

    var chartArc = new CanvasJS.Chart("chartContainerArc", {
	animationEnabled: true,
        title: {
            fontFamily: "tahoma",
        text: "Top 8 bài viết nhiều lượt xem nhất"
	},
        subtitles: [{
            fontFamily: "tahoma",
		text: "Từ tháng 12/2020 đến tháng 01/2021"
	}],
	axisY: {
		title: "lượt xem",
		gridThickness: 0
	},
	data: [{
		type: "bar",
		indexLabel: "{y}",
		dataPoints: @Html.Raw(ViewBag.dataPointsArticle)
	}]
    });
    chartArc.render();

}
</script>

