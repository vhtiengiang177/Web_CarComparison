@model CarComparison.Areas.Admin.Models.TypeUser

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h1 class="h3 mb-2 text-gray-800">Thêm thể loại</h1>

<div class="text-lg-right">
    @Html.ActionLink("Quay lại", "Index")
</div>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group-typeuser">
        <label>Mã thể loại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.id_typeuser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.id_typeuser, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group-typeuser">
        <label>Tên thể loại</label>
        <div class="col-md-10">
            @Html.EditorFor(model => model.name_typeuser, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.name_typeuser, "", new { @class = "text-danger" })
        </div>
    </div>
    <br />

    <div class="form-car">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Thêm" class="btn btn-primary" /> |
            @Html.ActionLink("Quay lại", "Index")
        </div>
    </div>
</div>
}


