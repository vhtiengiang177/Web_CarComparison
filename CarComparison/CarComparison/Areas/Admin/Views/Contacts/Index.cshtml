<!-- Page Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-4">
    <h1 class="h3 mb-0 text-gray-800">Danh sách liên hệ</h1>
    
</div>

@using (Html.BeginForm("ExportToExcel", "Contacts", FormMethod.Post))
{
    
    <input type="submit" value="Xuất File Excel" class="button pull-right"  />

}


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.name_contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.email_contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.state_contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.date_contact)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.subject_contact)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.name_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.email_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.state_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.date_contact)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.subject_contact)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.id_contact }) |
                @Html.ActionLink("Details", "Details", new { id = item.id_contact }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.id_contact })
            </td>
        </tr>
    }

</table>
