<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng ký | Car Comparison</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- css files -->
    <link href="~/Asset/Login/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Asset/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //css files -->
    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- //google fonts -->

</head>
<body>

    <div class="signupform">
        <div class="container">
            <!-- main content -->
            <div class="agile_info">
                <div class="w3l_form">
                    <div class="left_grid_info">
                        <h1>CAR COMPARISON</h1>
                        <p>Tạo tài khoản nhanh chóng và dễ dàng.</p>
                        <img src="~/Asset/Login/images/image.jpg" alt="" />
                    </div>
                </div>
                <div class="w3_info">
                    <h2>ĐĂNG KÝ</h2>
                    <br />
                    <form action="/Account/Register" method="post">
                        <label>Tài khoản</label>
                        <div class="input-group">
                            <input type="text" placeholder="Nhập tài khoản" name="username" required>
                            @Html.ValidationMessage("RegisterError", new { @class = "text-danger", @style = "color: crimson;" })
                        </div>
                        <label>Mật khẩu</label>
                        <div class="input-group">
                            <input class="form-control" type="password" name="password_user" id="password_user" />
                            @Html.ValidationMessage("PassError", new { @class = "text-danger", @style = "color: crimson;" })
                        </div>
                        <label>Họ</label>
                        <div class="input-group">
                            <input type="text" placeholder="Họ" name="lname" required>
                        </div>
                        <label>Tên</label>
                        <div class="input-group">
                            <input type="text" placeholder="Tên" name="fname" required>
                        </div>
                        <label>Email</label>
                        <div class="input-group">
                            <input type="text" placeholder="Email" name="email" required>
                        </div>
                        <label>Giới tính</label>
                        <div class="input-group">
                            <span class="input-group-span-radio">Nam <input type="radio" name="sex" value="1" checked />  |  Nữ <input type="radio" name="sex" value="2" />  |  Khác <input type="radio" name="sex" value="3" /></span>
                        </div>
                        <label>Ngày sinh</label>
                        <div class="input-group">
                            <input type="date" name="birthday" value="" max="2018-12-31" />
                        </div>
                        <button class="btn btn-danger btn-block" type="submit">Đăng Ký</button>
                    </form>
                    <p class="account">Bằng cách nhấn vào Đăng ký, bạn đồng ý với <a href="#">Điều khoản và chính sách</a> của chúng tôi.</p>
                </div>
            </div>
            <!-- //main content -->
        </div>
        <!-- footer -->
        <div class="footer">
            <p>&copy; 2020 Car Comparison Team 6. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="blank">W3layouts</a></p>
        </div>
        <!-- footer -->
    </div>

</body>
</html>



