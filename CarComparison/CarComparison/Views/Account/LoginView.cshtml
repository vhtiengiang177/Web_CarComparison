<!DOCTYPE html>
<html lang="en">
<head>
    <title>Đăng ký/Đăng nhập | Car Comparison</title>
    <!-- Meta-Tags -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta charset="utf-8">
    <meta name="keywords" content="">
    <script>
        addEventListener("load", function () {
            setTimeout(hideURLbar, 0);
        }, false);

        function hideURLbar() {
            window.scrollTo(0, 1);
        }
    </script>
    <!-- //Meta-Tags -->
    <!-- css files -->
    <link href="~/Asset/Login/css/font-awesome.min.css" rel="stylesheet" type="text/css" media="all">
    <link href="~/Asset/Login/css/style.css" rel="stylesheet" type="text/css" media="all" />
    <!-- //css files -->
    <!-- google fonts -->
    <link href="//fonts.googleapis.com/css?family=Raleway:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">
    <!-- //google fonts -->

</head>
<body>

    <div class="signupform">
        <div class="container">
            <!-- main content -->
            <div class="agile_info">
                <div class="w3l_form">
                    <div class="left_grid_info">
                        <a href="/Client">
                            <h1>CAR COMPARISON</h1>
                            <p></p>
                            <img src="~/Asset/Login/images/image.jpg" alt="" />
                        </a>
                    </div>
                </div>
                <div class="w3_info">
                    <h2>ĐĂNG NHẬP</h2>
                    <br />
                    <form action="/Account/Login" method="post">
                        @Html.ValidationSummary(true)

                        @Html.AntiForgeryToken()
                        <label>Username</label>
                        <div class="input-group">
                            <span class="fa fa-user" aria-hidden="true"></span>
                            <input type="text" placeholder="Enter Username" name="username" required>
                        </div>
                        <label>Password</label>
                        <div class="input-group">
                            <span class="fa fa-lock" aria-hidden="true"></span>
                            <input type="password" placeholder="Enter Password" name="password" required="">
                        </div>
                        <a href="/Account/ForgotPassword" style="font-size:15px; text-decoration:none; color:black; font-weight:normal">Quên mật khẩu</a>
                        <div>
                            @Html.ValidationMessage("LoginError", new { @class = "text-danger", @style = "color: crimson;" })
                        </div>
                        <br />
                        <button class="btn btn-danger btn-block" type="submit">Đăng nhập</button>
                    </form>
                    <p class="account">Bạn chưa có tài khoản? <a href="/Account/RegisterView">Đăng ký ở đây</a></p>
                </div>
            </div>
            <!-- //main content -->
        </div>
        <!-- footer -->
        <div class="footer">
            <p>&copy; 2020 Car Comparison Team 6. All Rights Reserved | Design by <a href="https://w3layouts.com/" target="blank">W3layouts</a></p>
        </div>
        <!-- footer -->
    </div>

</body>
</html>


